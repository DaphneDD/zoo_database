<html>
<head>
   <meta charset = "UTF-8">
   <title>zoo database</title>
   
   <!-- Bootstrap core CSS -->
	<!-- Bootstrap core CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	
	<!-- customized css -->
   <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>

<body>
	<div class="container-fluid">
		<div class="text-center">
			<h3>Fantasia Zoo Database</h3>
		</div>
		<!-- Horizontal Nav Bar -->
		<nav class="navbar flex-column flex-sm-row justify-content-between align-items-center">
			<a class="nav-link" href='/'>Home</a>
			<a class="nav-link active" href='/animals'>Animals</a>
			<a class="nav-link" href='/employees'>Employees</a>				
			<a class="nav-link" href='/facilities'>Facilities</a>
			<a class="nav-link" href='/tours'>Tour</a>
			<a class="nav-link" href='/animal_employee'>Animal-Employee</a>
			<a class="nav-link" href='/animal_tour'>Animal-Tour</a>				
			<a class="nav-link" href='/employee_facility'>Employee-Facility</a>
			<a class="nav-link" href='/employee_tour'>Employee-Tour</a>
		</nav>
	</div>
	<div class="container-fluid main-body">
	<!--	<div class="text-center">
			<h5 class="title">Update {{animal.name}}:</h5>
		</div>
	-->
		<form id="update_animal"> <!-- action="/animals" method="post"> -->
		<fieldset class="border p-2">
		<legend class="w-auto">Update information on animal: {{animal.name}} (id: {{animal.id}})</legend>
			Name <input type="text" name="name" value="{{animal.name}}" required><br><br>
				Class
					<select name="class" required>
						<option value="{{animal.class}}">{{animal.class}}</option>
						<option disabled>----------</option>
						<option value="mammals">mammals</option>
						<option value="birds">birds</option>
						<option value="fish">fish</option>
						<option value="reptiles">reptiles</option>
						<option value="amphibians">amphibians</option>
						<option value="anthropods">anthropods</option>
					</select>
					<br><br>
					Habitat
						<select name="habitat">
						<option value="{{animal.habitat}}">{{animal.habitat}}</option>
						<option disabled>----------</option>
						<option value=" ">None</option>
						<option value="desert">desert</option>
						<option value="grassland">grassland</option>
						<option value="forest">forest</option>
					</select>
					<br><br>
					Facility
					<select name="facility" id="facility_selector">
						{{#each facility}}
						<option value="{{id}}">{{name}}</option>
						{{/each}}
					</select>
					<br><br>

		<input type="submit" class="btn btn-outline-dark btn-sm" value="Update" onclick="updateAnimal({{animal.id}})" >
		</fieldset>
		</form>
	</div>
	<script defer>selectFacility({{animal.facility}});</script>
</body>
</html>
